#!/bin/sh

usage() {
    echo "dar-rts-config [ --libs | --cflags | --version | --help | -h ]"
}

if test $# -ne 1; then
    usage
    exit 1
fi

case $1 in
    --version) echo "@VERSION@ (@RELEASE@)";;
    --help)    usage;;
    -h)        usage;;
    --libs)    echo "-L@RTSLIBDIR@ -l@RTSLIB@";;
    --cflags)  echo "-mno-mips16 -static -mno-shared -mno-abicalls -nostdlib -fno-PIC -I@RTSINCDIR@";;
    *)         echo "ERROR: unknown option: $1"; usage; exit 1;;
esac

